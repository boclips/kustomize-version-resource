#!/usr/bin/env bash

set -e

cwd="$(cd "$(dirname "$0")" && pwd)"
# shellcheck disable=SC1090
source "$cwd/common"

payload="$(cat /dev/stdin)"

input_tag="$(get version tag <<< "$payload")"

jq \
    --null-input \
    --arg tag "$input_tag" \
    '{ version: $tag, metadata: [{ name: "tag", value: $tag }] }'
